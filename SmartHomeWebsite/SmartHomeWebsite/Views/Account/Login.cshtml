@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    @Styles.Render("~/Content/bootstrapcss")
    @Styles.Render("~/Content/css/style.css")
    @Scripts.Render("~/bundles/bootstrap.js")
</head>
<body">

    <div class="divLogin">
        <fieldset >
        
            @using (Html.BeginForm("Login", "Account", FormMethod.Post))
            {

                <table cellpadding="5" cellspacing="5">
                    <tr>
                        <td><input type="text" name="username" placeholder="İstifadəçi adı" class="inputLogin" /></td>
                    </tr>
                    <tr>
                        <td><input type="password" name="password" placeholder="Şifrə" class="inputLogin" /></td>
                    </tr>
                    <tr>

                        <td>
                            <input type="submit" value="Daxil ol" class="btnLogin" />
                        </td>
                    </tr>

                    <tr>

                        <td>@Html.ActionLink("Şifrəni unutmusunuz?", "Index", "Home", "Home", new { @class = "forgotPass" })</td>

                    </tr>
                </table>
            }
        </fieldset>
    </div>


</body>
</html>
